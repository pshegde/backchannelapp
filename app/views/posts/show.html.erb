<%if session[:user_id]!=nil%>
    <p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <b>Category:</b>
  <%= Category.find(@post.Category_id).name %>
</p>

<p>
  <b>Author:</b>
  <%= User.find(@post.User_id).username %>
</p>


<%= link_to 'Back', posts_path %>
  <%else%>

<h2>Please log in <%= link_to "here", :controller => 'logins', :action=>'new' %></h2>
<%end%>