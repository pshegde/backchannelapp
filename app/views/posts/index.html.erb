<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Category</th>
    <th>Author</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= Category.find(post.Category_id).name %></td>
    <td><%= User.find(post.User_id).username %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% if flash[:alert] %>
    <div  style='font-color:#CC0000;font-weight:bold;'>
      <%= flash[:alert] %>
    </div>
<% end %>

<%= link_to 'Post a Question', :controller => "posts", :action => "new" %>
