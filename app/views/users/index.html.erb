<%if session[:isadmin]==true %>
    <h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>

    <td><%= link_to 'Show', user %></td>
    <% if !user.admin?  %>
    <td><%= link_to 'Make Admin', edit_user_path(user) %></td>
    <%end%>
    <% if user.admin?  %>
    <td><%= link_to 'Revoke Admin', edit_user_path(user) %></td>
    <%end%>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'admin home page', :controller => 'admins', :action => 'index' %>
<%else%>
    <h2>Access Denied!</h2> <br>
    <h2><%= link_to "Login ", :controller => 'logins', :action=>'new' %></h2>

<%end%>