<h1>New login</h1>

<div class="container">
  <div class="main">
    <fieldset>
      <legend>
        Please Log In
      </legend>

      <%= form_tag  '/loginUser', :method => :post%>
          <p>
            <label for="username">
              Username:
            </label>
            <%= text_field_tag :username, params[:username] %>
          </p>
          <p>
            <label for="original_password">
              Password:
            </label>
            <%= password_field_tag :original_password, params[:original_password] %>
          </p>


          <p>
            <%= submit_tag "Login" %>
          </p>
          <div class="actions">
            <%= link_to "create new user" ,:controller=>'users',:action=>'new' %>
          </div>
      <%=  %>

      <% if flash[:alert] %>
          <div  style='font-color:#CC0000;font-weight:bold;'>
            <%= flash[:alert] %>
          </div>
      <% end %>
    </fieldset>
  </div>
</div>


