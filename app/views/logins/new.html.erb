<h1>New login</h1>

<div class="container">
  <div class="main">
    <fieldset>
      <legend>
        Please Log In
      </legend>

      <%= form_tag  '/loginUser', :method => :post%>
          <p>
            <label for="username">
              Username:
            </label>
            <%= text_field_tag :username, params[:username] %>
          </p>
          <p>
            <label for="password">
              Password:
            </label>
            <%= password_field_tag :password, params[:password] %>
          </p>


          <p>
            <%= submit_tag "Login" %>
          </p>
          <div class="actions">
            <%= link_to "create new user" ,:controller=>'users',:action=>'new' %>
          </div>
      <%=  %>


      <% if flash[:notice] %>
          <div class="notice">
            <%= flash[:notice] %>
          </div>
      <% end %>
    </fieldset>
  </div>
</div>


